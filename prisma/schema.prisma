// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Company {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  mail String?
  url String?
  contact_person Person[]
  status Status @default(WRITING)
  last_change DateTime @default(now())
  rating Int
  notes String
}

type Person {
  firstname String?
  lastname String?
  mail String?
}

enum Status {
  WRITING
  APPLIED
  ANSWERED
  REJECTED
  INVITED
  OFFER
}
